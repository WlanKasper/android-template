<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_std">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/info"
            android:layout_width="374sp"
            android:layout_height="103sp"
            android:layout_marginStart="15sp"
            android:ems="10"
            android:fontFamily="@font/cour"
            android:hint="Where is my Dog?"
            android:inputType="text"
            android:textColor="@color/text_std"
            android:textColorHint="@color/text_std"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/editText_lastname"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="2sp"
            android:ems="10"
            android:fontFamily="@font/cour"
            android:hint="Week"
            android:inputType="text"
            android:textColor="@color/text_std"
            android:textColorHint="@color/text_std"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"

            android:layout_marginTop="15sp"
            android:fontFamily="@font/cour_bold"
            android:text="Lastname"

            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/text_std"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_name" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cour_bold"
            android:gravity="center"
            android:text="New Client"
            android:textAlignment="center"
            android:textColor="@color/primary_std"
            android:textSize="28sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"

            android:layout_marginTop="10sp"
            android:fontFamily="@font/cour_bold"
            android:text="General info:"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/text_std"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_lastname" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"

            android:layout_marginTop="14sp"
            android:fontFamily="@font/cour_bold"
            android:text="Name:"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/text_std"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:autofillHints=""
            android:ems="10"
            android:fontFamily="@font/cour"
            android:hint="Jon"
            android:inputType="text"
            android:shadowColor="#FFFFFF"
            android:textColor="@color/text_std"
            android:textColorHint="@color/text_std"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"

            android:layout_marginTop="15sp"
            android:fontFamily="@font/cour_bold"
            android:text="Time"

            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/text_std"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info" />

        <EditText
            android:id="@+id/editText_time"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="2sp"
            android:ems="10"
            android:fontFamily="@font/cour"
            android:hint="18:00"
            android:inputType="time"
            android:textColor="@color/text_std"
            android:textColorHint="@color/text_std"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <Button
            android:id="@+id/buttonStartModal"
            style="@style/std_btn_style"
            android:layout_marginTop="36sp"
            android:text="start"
            app:cornerRadius="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_time"
            app:strokeColor="@color/primary_std"
            app:strokeWidth="2sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>